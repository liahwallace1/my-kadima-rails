
<h3><%= current_user.username %>'s Games</h3>
<br />
<a class="btn btn-primary show-form" role="button" data-toggle="collapse" href="#collapseForm" aria-expanded="false" aria-controls="collapseForm">Add a New Game</a>
<br />
<div class="add-game collapse" id="collapseForm">
  <h3>Add a New Game</h3>
  <%= render :partial => 'form', :locals => {game: Game.new, myclass: "in-index"} %>
</div>
<br />
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Game Type</th>
        <th>Distance</th>
        <th>Volley Count</th>
        <th>Players</th>
      </tr>
    </thead>
    <tbody class="game-rows">
      <% @games.each do |game| %>

        <tr class="clickable-row" data-href="<%= game_path(game) %>">
          <td><%= date_formatted(game) %></td>
          <td><%= game.location.name %></td>
          <td><%= game.game_type %></td>
          <td><%= game.distance %></td>
          <td><%= game.volley_total %></td>
          <td><%= game.player_names %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @games.empty? %>
  <%= "No games." %>
<% end %>
