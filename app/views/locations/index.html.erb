<h3>Kadima Locations</h3>
<br>
<%= link_to "Add a Location", new_location_path, :class => "btn btn-primary" %>
<br><br><br>
<ul>
<% @locations.each do |location| %>
  <li><strong><%= link_to location.name, location_path(location) %></strong><br>
    <%= location.city %>, <%= location.state %><br>
    <%= link_to "Edit", edit_location_path(location), :class => "btn btn-xs btn-default" %>
    <i><%= info_needed(location) %></i>
  </li><br>
<% end %>
</ul>
