<%= form_for @location, {:class => "location-form"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  <%= f.label :state %>
  <%= f.select(:state, state_array, :include_blank => true) %><br>
  <%= f.label "Check if this location has lighting at night: " %>
  <%= f.check_box :lighting %><br>
  <%= f.label :turf %>
  <%= f.select(:turf, turf_options, :include_blank => true) %><br><br>
  <%= f.submit :class => "btn btn-primary submit" %>  <%= link_to "Back to Locations", locations_path, class: "btn btn-primary see-locations" %>
<% end %>
