<h3 class="text-center">Log In to your MyKadima account:</h3>

<%= form_tag(login_path, {class: "form-horizontal text-center"}) do %>
  <%= text_field_tag :username, nil, placeholder: "Username" %><br>
  <%= password_field_tag :password, nil, placeholder: "Password" %><br>
  <%= submit_tag "Log in", class: "btn btn-primary" %><br>
  <% end %>
<h5 class="text-center">OR</h5>
<%= link_to '/auth/facebook' do %>
  <%= image_tag "/assets/facebook_login.png", class: "facebook-login" %>
<% end %>
